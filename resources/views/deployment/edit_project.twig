{% extends 'layouts.admin_main' %}

{% block title %}
	{{ project ? 'Edit':'New' }} Deployment Project
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-lg-6">
			<div class="box">
				<div class="box-header">
					Project Details
				</div>
				<div class="box-body">
					<div class="row">
						<form role="form" method="POST">
							<input type="hidden" name="_token" value="{{ csrf_token()|raw }}" />
							<div class="col-lg-12">
								<div class="form-group{{ errors.has('name') ? ' has-error':'' }}">
									<label>Name</label>
									<input name="name" class="form-control" value="{{ old('name') ? old('name') : (project) ? project.name:''}}">
									{% if errors.has('name') %}
										{% for error in errors.get('name') %}
                                            <p class="help-block">
                                                {{ error }}
                                            </p>
                                        {% endfor %}
                                    {% endif %}
								</div>
								<div class="form-group">
									<div class="radio">
										<label>
											{% if old('repository_location') == 'bitbucket' or ( project and project.repository_location == 'bitbucket' ) %}
												<input type="radio" name="repository_location" id="repository_location" value="bitbucket" checked="">
											{% else %}
												<input type="radio" name="repository_location" id="repository_location" value="bitbucket">
											{% endif %}
											Bitbucket
										</label>
									</div>
									<div class="radio">
										<label>
											{% if old('repository_location') == 'github' or ( project and project.repository_location == 'github' ) %}
												<input type="radio" name="repository_location" id="repository_location" value="github" checked="">
											{% else %}
												<input type="radio" name="repository_location" id="repository_location" value="github">
											{% endif %}
											GitHub
										</label>
									</div>
									<div class="radio">
										<label>
											{% if old('repository_location') == 'other' or ( project and project.repository_location == 'other' ) %}
												<input type="radio" name="repository_location" id="repository_location" value="other" checked="">
											{% else %}
												<input type="radio" name="repository_location" id="repository_location" value="other">
											{% endif %}
											Other
										</label>
									</div>
									{% if errors.has('repository_location') %}
										{% for error in errors.get('repository_location') %}
                                            <p class="help-block">
                                                {{ error }}
                                            </p>
                                        {% endfor %}
                                    {% endif %}
								</div>
								<div class="form-group{{ errors.has('repository') ? ' has-error':'' }}">
									<label>Repository URL</label>
									<input name="repository" class="form-control" value="{{ old('repository') ? old('repository') : (project) ? project.repository:''}}">
									{% if errors.has('repository') %}
										{% for error in errors.get('repository') %}
                                            <p class="help-block">
                                                {{ error }}
                                            </p>
                                        {% endfor %}
                                    {% endif %}
								</div>
								<div class="form-group{{ errors.has('status') ? ' has-error' : '' }}">
                                    <label class="control-label">Status</label>
                                    <select name="status" id="status" class="form-control">
                                        {% if ( old('status') and old('status') == 'Inactive' ) or ( project and project.status == 'Inactive' ) %}
                                            <option value="Active">Active</option>
                                            <option selected value="Inactive">Inactive</option>
                                        {% else %}
                                            <option selected value="Active">Active</option>
                                            <option value="Inactive">Inactive</option>
                                        {% endif %}
                                    </select>
                                    {% if errors.has('status') %}
                                        {% for error in errors.get('status') %}
                                            <p class="help-block">{{ error }}</p>
                                        {% endfor %}
                                    {% endif %}
                                </div>
								<div class="form-group{{ errors.has('recipe') ? ' has-error' : '' }}">
                                    <label class="control-label">Recipe</label>
                                    <select name="recipe" id="recipe" class="form-control">
										{% for recipe_key, recipe_name in recipes %}
	                                        {% if ( old('recipe') and old('recipe') == recipe_key ) or ( project and project.recipe == recipe_key ) %}
		                                        <option selected value="{{ recipe_key }}">{{ recipe_name }}</option>
											{% else %}
		                                        <option value="{{ recipe_key }}">{{ recipe_name }}</option>
											{% endif %}
										{% endfor %}
                                    </select>
                                    {% if errors.has('recipe') %}
                                        {% for error in errors.get('recipe') %}
                                            <p class="help-block">{{ error }}</p>
                                        {% endfor %}
                                    {% endif %}
                                </div>

								<div class="form-group{{ errors.has('description') ? ' has-error':'' }}">
									<label>Description</label>
									<textarea name="description" class="form-control" rows="3">{{ old('description') ? old('description') : (project) ? project.description:''}}</textarea>
									{% if errors.has('description') %}
										{% for error in errors.get('description') %}
                                            <p class="help-block">
                                                {{ error }}
                                            </p>
                                        {% endfor %}
                                    {% endif %}
								</div>
								<button type="submit" class="btn btn-default">Save</button>
							</div>
						</form>
						<!-- /.col-lg-6 (nested) -->
					</div>
					<!-- /.row (nested) -->
				</div>
				<!-- /.panel-body -->
			</div>
			<!-- /.panel -->
		</div>
		<!-- /.col-lg-12 -->
	</div>
	<!-- /.row -->
{% endblock %}
